{
	"version": 2,
	"name": "secretsanta",
	"builds": [
		{ "src": "application.py", "use": "@now/python" }
	],
	"routes": [
		{ "src": "/(.*)", "dest": "application.py" }
	],
	"env": {
    	"MAIL_SERVER": "@mail-server",
    	"MAIL_PASS": "@mail-pass",
    	"MAIL_USER": "@mail-user",
    	"MAIL_PORT": "@mail-port"
  	}
}